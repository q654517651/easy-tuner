import { useEffect, useRef, useState } from "react";
import { Checkbox } from "@heroui/react";

// åˆ¤æ–­æ–‡ä»¶ç±»å‹çš„å·¥å…·å‡½æ•°
const isVideoFile = (filename: string): boolean => {
  const videoExts = ['.mp4', '.avi', '.mov', '.mkv', '.wmv', '.webm', '.m4v'];
  const ext = filename.toLowerCase().slice(filename.lastIndexOf('.'));
  return videoExts.includes(ext);
};

type Props = {
  url: string;
  filename: string;
  caption: string;
  isSelected?: boolean;
  isLabeling?: boolean;
  onSelect?: (selected: boolean) => void;
  onDelete?: () => void;
  onAutoLabel?: () => Promise<void> | void;
  onCaptionSave?: (next: string) => Promise<void> | void;
  onUploadControl?: (index: number) => void; // ä¸Šä¼ æ§åˆ¶å›¾å›è°ƒ
  controlImages?: { url: string; filename: string; }[]; // æ§åˆ¶å›¾åˆ—è¡¨
  datasetType?: string; // æ•°æ®é›†ç±»å‹ï¼Œç”¨äºåˆ¤æ–­æ˜¯å¦æ˜¾ç¤ºæ§åˆ¶å›¾ç•Œé¢
  autosaveDelay?: number;
};

export default function DatasetCard({
  url,
  filename,
  caption,
  isSelected = false,
  isLabeling = false,
  onSelect,
  onDelete,
  onAutoLabel,
  onCaptionSave,
  onUploadControl,
  controlImages,
  datasetType,
  autosaveDelay = 1800,
}: Props) {
  const [text, setText] = useState(caption ?? "");
  const savedRef = useRef(text);
  const timerRef = useRef<number | null>(null);

  // è§†é¢‘ç›¸å…³çŠ¶æ€
  const videoRef = useRef<HTMLVideoElement>(null);
  const [isVideo] = useState(() => isVideoFile(filename));
  const [isHovering, setIsHovering] = useState(false);

  // æ§åˆ¶å›¾ç›¸å…³çŠ¶æ€
  const [currentImageIndex, setCurrentImageIndex] = useState(0); // å½“å‰é€‰ä¸­çš„å›¾ç‰‡ç´¢å¼•ï¼š0=åŸå›¾ï¼Œ1-3=æ§åˆ¶å›¾
  const isControlMode = datasetType === "image_control";

  // æ„å»ºå›¾ç‰‡åˆ—è¡¨ï¼šåŸå›¾ + æ§åˆ¶å›¾ï¼ˆæœ€å¤š3å¼ ï¼‰
  const imageList = isControlMode ? [
    { url, filename, type: 'original' as const },
    ...((controlImages || []).slice(0, 3).map((img, idx) => ({
      url: img.url,
      filename: img.filename,
      type: 'control' as const,
      index: idx
    })))
  ] : [{ url, filename, type: 'original' as const }];

  // ä¸ºæ§åˆ¶å›¾æ¨¡å¼å¡«å……ç©ºä½ï¼ˆç¡®ä¿æœ‰4ä¸ªä½ç½®ï¼‰
  if (isControlMode) {
    const maxImages = 4;
    while (imageList.length < maxImages) {
      imageList.push({
        url: '',
        filename: '',
        type: 'empty' as const,
        index: imageList.length - 1
      });
    }
  }

  const currentImage = imageList[currentImageIndex] || imageList[0];

  // å¤–éƒ¨ caption å˜åŒ–æ—¶åŒæ­¥
  useEffect(() => {
    setText(caption ?? "");
    savedRef.current = caption ?? "";
  }, [caption]);

  // è‡ªåŠ¨ä¿å­˜ï¼ˆå»æŠ–ï¼‰
  useEffect(() => {
    if (!onCaptionSave) return;
    if (text === savedRef.current) return;
    if (timerRef.current) window.clearTimeout(timerRef.current);
    timerRef.current = window.setTimeout(async () => {
      if (text !== savedRef.current) {
        await onCaptionSave(text);
        savedRef.current = text;
      }
    }, autosaveDelay);
    return () => {
      if (timerRef.current) window.clearTimeout(timerRef.current);
    };
  }, [text, autosaveDelay, onCaptionSave]);

  // ç«‹å³ä¿å­˜ï¼šâŒ˜/Ctrl + Enter
  const handleKeyDown = async (e: React.KeyboardEvent<HTMLTextAreaElement>) => {
    if ((e.metaKey || e.ctrlKey) && e.key === "Enter" && onCaptionSave) {
      if (timerRef.current) window.clearTimeout(timerRef.current);
      await onCaptionSave(text);
      savedRef.current = text;
    }
  };

  // è§†é¢‘æ’­æ”¾æ§åˆ¶
  useEffect(() => {
    if (!isVideo || !videoRef.current) return;

    const video = videoRef.current;

    if (isHovering) {
      // é¼ æ ‡æ‚¬æµ®æ—¶æ’­æ”¾
      video.currentTime = 0; // é‡æ–°æ’­æ”¾
      video.play().catch(() => {
        // å¿½ç•¥æ’­æ”¾å¤±è´¥
      });
    } else {
      // é¼ æ ‡ç§»å‡ºæ—¶æš‚åœ
      video.pause();
    }
  }, [isHovering, isVideo]);

  // å¤„ç†åª’ä½“åŒºåŸŸç‚¹å‡»é€‰ä¸­
  const handleMediaClick = () => {
    // å¦‚æœæ­£åœ¨æ‰“æ ‡ä¸­ï¼Œç¦ç”¨é€‰æ‹©
    if (isLabeling) return;

    if (onSelect) {
      onSelect(!isSelected);
    }
  };

  // å¤„ç†é¼ æ ‡æ‚¬æµ®äº‹ä»¶
  const handleMouseEnter = () => {
    setIsHovering(true);
  };

  const handleMouseLeave = () => {
    setIsHovering(false);
  };

  // å¤„ç†ç¼©ç•¥å›¾ç‚¹å‡»åˆ‡æ¢
  const handleThumbnailClick = (index: number) => {
    if (isLabeling) return;

    const targetImage = imageList[index];
    if (targetImage.type === 'empty') {
      // ç‚¹å‡»ç©ºä½ï¼Œè§¦å‘ä¸Šä¼ 
      if (onUploadControl && index > 0) {
        onUploadControl(index - 1); // æ§åˆ¶å›¾ç´¢å¼•ä»0å¼€å§‹
      }
      return;
    }

    setCurrentImageIndex(index);
  };

  return (
    <div className={`group rounded-2xl ring-1 bg-white dark:bg-neutral-900 shadow-sm transition-all duration-200 ${
      isSelected
        ? 'ring-blue-500 ring-[2.5px]'
        : 'ring-black/10 dark:ring-white/10'
    }`}>
      {/* ä¸ŠåŠåŒºï¼šåª’ä½“åŒº */}
      <div className="relative w-full h-52 sm:h-60 md:h-64 overflow-hidden rounded-t-2xl">
        {isControlMode ? (
          /* æ§åˆ¶å›¾æ¨¡å¼ï¼šä¸»å›¾åŒºåŸŸ + å³ä¾§ç¼©ç•¥å›¾åˆ—è¡¨ */
          <div className="flex h-full">
            {/* ä¸»å›¾åŒºåŸŸ */}
            <div
              className="flex-1 relative cursor-pointer"
              onClick={handleMediaClick}
              onMouseEnter={handleMouseEnter}
              onMouseLeave={handleMouseLeave}
            >
              {currentImage.url ? (
                <>
                  {/* èƒŒæ™¯æ¨¡ç³Šå›¾ */}
                  <img
                    src={currentImage.url}
                    alt=""
                    className="absolute inset-0 w-full h-full object-cover scale-110 blur-xl brightness-[0.6]"
                    loading="lazy"
                  />
                  <div className="absolute inset-0 bg-gradient-to-b from-black/20 via-black/20 to-black/25" />

                  {/* å‰æ™¯ä¸»å›¾ */}
                  <img
                    src={currentImage.url}
                    alt={currentImage.filename}
                    className="relative z-10 w-full h-full object-contain"
                    loading="lazy"
                  />
                </>
              ) : (
                <div className="w-full h-full bg-neutral-100 dark:bg-neutral-800 flex items-center justify-center">
                  <span className="text-neutral-400 text-sm">æš‚æ— å›¾ç‰‡</span>
                </div>
              )}

              {/* å·¦ä¸Šè§’é€‰ä¸­çŠ¶æ€ */}
              {onSelect && !isLabeling && (
                <div className="absolute top-2 left-2 z-20">
                  <Checkbox
                    isSelected={isSelected}
                    onValueChange={onSelect}
                    size="lg"
                    className="pointer-events-none"
                    classNames={{
                      base: "pointer-events-auto",
                      wrapper: "before:border-white/50 after:bg-blue-500 after:text-white bg-black/30 backdrop-blur-sm",
                    }}
                  />
                </div>
              )}

              {/* å³ä¸Šè§’æ“ä½œæŒ‰é’® */}
              {!isLabeling && (
                <div className="absolute top-2 right-2 z-20 flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                  {onAutoLabel && (
                    <button
                      aria-label="æ‰“æ ‡"
                      onClick={(e) => {
                        e.stopPropagation();
                        onAutoLabel?.();
                      }}
                      className="w-9 h-9 rounded-lg bg-black/40 text-white/90 backdrop-blur grid place-items-center hover:bg-black/50"
                      title="æ‰“æ ‡"
                    >
                      ğŸ·ï¸
                    </button>
                  )}
                  {onDelete && (
                    <button
                      aria-label="åˆ é™¤"
                      onClick={(e) => {
                        e.stopPropagation();
                        onDelete?.();
                      }}
                      className="w-9 h-9 rounded-lg bg-black/40 text-white/90 backdrop-blur grid place-items-center hover:bg-black/50"
                      title="åˆ é™¤"
                    >
                      ğŸ—‘ï¸
                    </button>
                  )}
                </div>
              )}

              {/* æ‰“æ ‡è¿›è¡Œä¸­è’™ç‰ˆ */}
              {isLabeling && (
                <div className="absolute inset-0 z-30 bg-black/60 backdrop-blur-sm flex flex-col items-center justify-center">
                  <div className="text-white text-sm font-medium mb-2">æ­£åœ¨æ‰“æ ‡ä¸­...</div>
                  <div className="w-8 h-8 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
                </div>
              )}
            </div>

            {/* å³ä¾§ç¼©ç•¥å›¾åˆ—è¡¨ */}
            <div className="w-20 flex flex-col bg-black/10 dark:bg-white/5">
              {imageList.map((img, index) => (
                <div
                  key={index}
                  className={`flex-1 relative cursor-pointer border-b border-white/10 last:border-b-0 transition-all ${
                    currentImageIndex === index
                      ? 'ring-2 ring-blue-500'
                      : 'hover:bg-white/5'
                  }`}
                  onClick={() => handleThumbnailClick(index)}
                >
                  {img.url ? (
                    <img
                      src={img.url}
                      alt=""
                      className="w-full h-full object-cover"
                      loading="lazy"
                    />
                  ) : (
                    <div className="w-full h-full bg-neutral-200 dark:bg-neutral-700 flex flex-col items-center justify-center">
                      <div className="text-xs text-neutral-500 mb-1">
                        {index === 0 ? 'åŸå›¾' : `æ§åˆ¶${index}`}
                      </div>
                      {index > 0 && (
                        <button
                          className="text-xs px-2 py-0.5 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
                          onClick={(e) => {
                            e.stopPropagation();
                            handleThumbnailClick(index);
                          }}
                        >
                          ä¸Šä¼ 
                        </button>
                      )}
                    </div>
                  )}

                  {/* å›¾ç‰‡ç±»å‹æ ‡è¯† */}
                  <div className="absolute bottom-1 left-1">
                    <span className="text-xs bg-black/60 text-white px-1 rounded">
                      {index === 0 ? 'åŸ' : `C${index}`}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ) : (
          /* æ™®é€šæ¨¡å¼ï¼šåŸæœ‰çš„å•å›¾å¸ƒå±€ */
          <div
            className="relative w-full h-full cursor-pointer"
            onClick={handleMediaClick}
            onMouseEnter={handleMouseEnter}
            onMouseLeave={handleMouseLeave}
          >
            {/* èƒŒæ™¯ cover æ”¾å¤§ + æ¨¡ç³Š + æ·±è‰² */}
            {isVideo ? (
              <video
                src={url}
                className="absolute inset-0 w-full h-full object-cover scale-110 blur-xl brightness-[0.6]"
                muted
                playsInline
              />
            ) : (
              <img
                src={url}
                alt=""
                className="absolute inset-0 w-full h-full object-cover scale-110 blur-xl brightness-[0.6]"
                loading="lazy"
              />
            )}
            <div className="absolute inset-0 bg-gradient-to-b from-black/20 via-black/20 to-black/25" />

            {/* å‰æ™¯ï¼šé•¿è¾¹è´´è¾¹ï¼ˆcontainï¼‰ */}
            {isVideo ? (
              <video
                ref={videoRef}
                src={url}
                className="relative z-10 w-full h-full object-contain"
                muted
                playsInline
                loop
                preload="metadata"
              />
            ) : (
              <img
                src={url}
                alt={filename}
                className="relative z-10 w-full h-full object-contain"
                loading="lazy"
              />
            )}

            {/* å·¦ä¸Šè§’é€‰ä¸­çŠ¶æ€ Checkbox */}
            {onSelect && !isLabeling && (
              <div className="absolute top-2 left-2 z-20">
                <Checkbox
                  isSelected={isSelected}
                  onValueChange={onSelect}
                  size="lg"
                  className="pointer-events-none"
                  classNames={{
                    base: "pointer-events-auto",
                    wrapper: "before:border-white/50 after:bg-blue-500 after:text-white bg-black/30 backdrop-blur-sm",
                  }}
                />
              </div>
            )}

            {/* æ‰“æ ‡è¿›è¡Œä¸­çš„è’™ç‰ˆ */}
            {isLabeling && (
              <div className="absolute inset-0 z-30 bg-black/60 backdrop-blur-sm flex flex-col items-center justify-center">
                <div className="text-white text-sm font-medium mb-2">æ­£åœ¨æ‰“æ ‡ä¸­...</div>
                <div className="w-8 h-8 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
              </div>
            )}

            {/* æ‚¬æµ®æ˜¾ç¤ºæ“ä½œæŒ‰é’®ï¼šæ‰“æ ‡ + åˆ é™¤ */}
            {!isLabeling && (
              <div className="absolute top-2 right-2 z-20 flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                {onAutoLabel && (
                  <button
                    aria-label="æ‰“æ ‡"
                    onClick={() => onAutoLabel?.()}
                    className="w-9 h-9 rounded-lg bg-black/40 text-white/90 backdrop-blur grid place-items-center hover:bg-black/50"
                    title="æ‰“æ ‡"
                  >
                    ğŸ·ï¸
                  </button>
                )}
                {onDelete && (
                  <button
                    aria-label="åˆ é™¤"
                    onClick={onDelete}
                    className="w-9 h-9 rounded-lg bg-black/40 text-white/90 backdrop-blur grid place-items-center hover:bg-black/50"
                    title="åˆ é™¤"
                  >
                    ğŸ—‘ï¸
                  </button>
                )}
              </div>
            )}
          </div>
        )}
      </div>

      {/* ä¸‹åŠåŒºï¼šæ–‡ä»¶å + å¯ç¼–è¾‘æ‰“æ ‡ */}
      <div className="p-3 space-y-2">
        <div className="text-sm font-semibold truncate flex items-center gap-2">
          <span>{filename}</span>
          {isControlMode && currentImageIndex > 0 && (
            <span className="text-xs text-blue-600 bg-blue-50 px-1.5 py-0.5 rounded shrink-0">
              æ§åˆ¶å›¾ {currentImageIndex}
            </span>
          )}
        </div>

        <div className="rounded-2xl bg-neutral-100 dark:bg-white/10">
          <textarea
            className="w-full min-h-24 max-h-56 resize-y px-3 py-2 bg-transparent outline-none text-sm leading-6
                       placeholder:text-neutral-400 disabled:opacity-50 disabled:cursor-not-allowed"
            placeholder="è¾“å…¥æ‰“æ ‡å†…å®¹â€¦ï¼ˆâŒ˜/Ctrl + Enter ç«‹å³ä¿å­˜ï¼‰"
            value={text}
            onChange={(e) => setText(e.target.value)}
            onKeyDown={handleKeyDown}
            disabled={isLabeling}
          />
        </div>
      </div>
    </div>
  );
}
